<h2><%= expense ? 'Edit' : 'Add' %> Expense</h2>

<form class="main-form" action="<%= action %>" method="POST">
  <% if (expense) { %>
    <input type="hidden" name="_method" value="PUT">
  <% } %>

  <label>Title:</label>
  <input
    type="text"
    name="title"
    value="<%= expense?.title || '' %>"
    required
  >

  <label>Amount:</label>
  <input
    type="number"
    name="amount"
    value="<%= expense?.amount || '' %>"
    required
  >

  <label>Date:</label>
  <input
    type="date"
    name="date"
    value="<%= expense?.date ? expense.date.toISOString().split('T')[0] : '' %>"
    required
  >

  <label>Category:</label>
  <select name="categoryId" required>
    <% categories.forEach(c => { %>
      <option
        value="<%= c.id %>"
        <%= expense && c.id === expense.CategoryId ? 'selected' : '' %>
      >
        <%= c.name %>
      </option>
    <% }) %>
  </select>

  <button type="submit">Save</button>
</form>
